<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
        {{title}}
        </h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
        {{content}}
        </p>
    </div>
    {{#each comments as |comment| }}
    <div class="row mb-4 project">
    <div class="col-md-5">
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
        {{comment.content}}
        </p>
    </div>
    </div>
    {{/each}}
</div>
