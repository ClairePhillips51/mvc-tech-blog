<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
        {{title}}
        </h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
        {{content}}
        </p>
    </div>
    {{#each comments as |comment| }}
    <div class="row mb-4 project">
    <div class="col-md-5">
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
        <div class="col-md-7">
            <p>
            {{comment.content}}
            </p>
        </div>
    </div>
    {{/each}}
    <div id="post-id" hidden>{{id}}</div>
    <div>
        <h3>New Comment</h3>
        <form class="form comment-form">
            <div class="form-group">
                <textarea class="form-input" type="textarea" id="comment-body" placeholder="Type comment here"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="../js/newcomment.js"></script>
